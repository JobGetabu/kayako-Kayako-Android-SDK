<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="horizontal">

    <Space
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <com.kayako.sdk.android.k5.common.view.CircleImageView
        android:id="@+id/ko__messenger_toolbar_avatar1"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:transitionName="ko__messenger_toolbar_avatar1"
        android:visibility="gone"
        tools:background="#008800"
        tools:visibility="visible" />

    <com.kayako.sdk.android.k5.common.view.CircleImageView
        android:id="@+id/ko__messenger_toolbar_avatar2"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:transitionName="ko__messenger_toolbar_avatar2"
        android:visibility="gone"
        tools:background="#880000"
        tools:visibility="visible" />

    <com.kayako.sdk.android.k5.common.view.CircleImageView
        android:id="@+id/ko__messenger_toolbar_avatar3"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:transitionName="ko__messenger_toolbar_avatar3"
        android:visibility="gone"
        tools:background="#000088"
        tools:visibility="visible" />

    <Space
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1" />


</LinearLayout>