<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ko__attachment_placeholder"
    android:layout_width="@dimen/ko__messenger_attachment_default_width"
    android:layout_height="wrap_content"
    android:background="@drawable/ko__attachment_background"
    android:maxWidth="@dimen/ko__messenger_attachment_default_width"
    android:minWidth="@dimen/ko__messenger_attachment_default_width"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/ko__attachment_placeholder_icon"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:layout_margin="@dimen/ko__attachment_placeholder_icon_margin"
        android:src="@drawable/ic__ko__attachment_generic" />

    <com.kayako.sdk.android.k5.common.view.BoldTextView
        android:id="@+id/ko__attachment_placeholder_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/ko__attachment_text_background"
        android:gravity="center"
        android:padding="@dimen/ko__attachment_placeholder_text_padding"
        android:textColor="@color/ko__messenger_attachment_placeholder_text_color"
        tools:text="HelloHelloHelloHelloHelloHello.png" />

</LinearLayout>