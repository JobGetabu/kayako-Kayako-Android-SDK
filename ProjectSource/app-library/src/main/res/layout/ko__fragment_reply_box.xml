<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <!-- TODO: Add attachment button -->

    <include layout="@layout/ko__include_separator" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp">

        <EditText
            android:id="@+id/reply_box_edittext"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_weight="1"
            android:background="@null"
            android:ellipsize="end"
            android:gravity="center_vertical|start"
            android:maxLines="4"
            android:minHeight="40dp"
            android:scrollIndicators="end"
            android:scrollbarAlwaysDrawVerticalTrack="true"
            android:scrollbars="vertical"
            android:textSize="16sp"
            tools:text="LOONG MESSAGE. IT GOES ON AND ON AND ON AND ON AND ON AND ON AND ON AND ON AND ON AND ON AND ON AND ON AND ON AND ON AND ON AND ON AND ON AND ON AND ON AND ON AND ON AND ON AND ON AND ON AND ON AND ON AND ON AND ON AND ON AND ON AND ON AND ON AND ON AND ON AND ON....">

            <requestFocus />
        </EditText>


        <!-- TODO: For reply_box_text
            android:hint="@string/msg_hint_add_a_reply"
            android:textColor="@color/reply_box_text_color"
            android:textColorHint="@color/reply_box_hint_text_color"
            -->

        <Button
            android:id="@+id/send_button"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:padding="8dp"
            android:scaleType="centerInside"
            android:text=">" />


        <!-- TODO: for later
        - Remove send from top and add image button
            android:background="@drawable/channel_select_unselected_background"
            app:srcCompat="@drawable/ic_send"
            -->

    </LinearLayout>

</LinearLayout>