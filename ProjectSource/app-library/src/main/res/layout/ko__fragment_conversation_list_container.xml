<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <fragment
        android:id="@+id/ko__conversation_list"
        android:name="com.kayako.sdk.android.k5.conversationlistpage.ConversationListFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


    <Button
        android:id="@+id/ko__new_conversation_button"
        android:layout_width="@dimen/ko__conversation_list_new_conversation_button_width"
        android:layout_height="@dimen/ko__conversation_list_new_conversation_button_height"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_margin="16dp"
        android:text="New Conversation" />

    <!-- TODO: Polish UI fo the new conversation Button -->

</FrameLayout>