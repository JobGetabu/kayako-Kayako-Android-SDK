<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/ko__list"
        android:name="com.kayako.sdk.android.k5.welcomepage.ItemFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layoutManager="LinearLayoutManager"
        tools:context=".view.ListFragment"
        tools:listitem="@layout/ko__list_item_search_result" />

    <ViewStub
        android:id="@+id/ko__stub_empty_state"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:inflatedId="@+id/ko__inflated_stub_empty_state"
        android:layout="@layout/ko__include_state_empty" />

    <ViewStub
        android:id="@+id/ko__stub_loading_state"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:inflatedId="@+id/ko__inflated_stub_loading_state"
        android:layout="@layout/ko__include_state_loading" />

    <ViewStub
        android:id="@+id/ko__stub_error_state"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:inflatedId="@+id/ko__inflated_stub_error_state"
        android:layout="@layout/ko__include_state_error" />

</FrameLayout>