<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/ko__list"
        android:name="com.kayako.sdk.android.k5.welcomepage.ItemFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layoutManager="LinearLayoutManager"
        tools:context=".view.ListFragment"
        tools:listitem="@layout/ko__list_search_item" />

    <include layout="@layout/ko__include_state_empty" />

    <include layout="@layout/ko__include_state_loading" />

    <include layout="@layout/ko__include_state_error" />

</FrameLayout>